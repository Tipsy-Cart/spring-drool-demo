{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Invoice",
  "type": "object",
  "properties": {
    "invNum": {
      "type": "string",
      "minLength": 1,
      "maxLength": 12,
      "pattern": "^[A-Za-z0-9\\-_]{12}$"
    },
    "invDate": {
      "type": "string",
      "format": "date"
    },
    "invType": {
      "type": "string",
      "enum": ["380","381","382"]
    },
    "supRegistrationType": {
      "type": "string",
      "enum": ["PASSPORT","EID"]
    },
    "supPassportIssuingCountry": {
      "type": "string",
      "enum": ["UAE","INDIA"]
    },
    "item": {
      "type": "object",
      "properties": {
        "tax": {
          "type": "object",
          "properties": {
            "code": {
              "type": "string"
            }
          },
          "required": ["code"]
        }
      },
      "required": ["tax"]
    }
  },
  "if": {
    "properties": {
      "supRegistrationType" : {"const": "PASSPORT"}
    }
  },
  "then": {
    "required": ["supPassportIssuingCountry"]
  },
  "required": ["invNum", "invDate", "invType", "supRegistrationType", "item"],
  "additionalProperties": false
}
